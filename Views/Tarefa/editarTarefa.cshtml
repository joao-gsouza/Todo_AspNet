@model Todo_id.Models.Tarefa

<h2>Editar</h2>

<h4>Agora pode Editar sua tarefa </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Tarefa" asp-action="EditarTarefa">
            <div class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input type="text" asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-controller="Home" asp-action="Index">Volta</a>
</div>